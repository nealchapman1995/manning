<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Manning</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/1e3c0f094b.js" crossorigin="anonymous"></script>
</head>

<body class="container">
    <ul class="nav nav-tabs justify-content-center">
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="/">Soldiers</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/squads">Squads</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/weapons">Weapons</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/vehicles">Vehicles</a>
          </li>
          <li class="nav-item">
            <a class="nav-link " aria-current="page" href="/keys">Keys</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/buildings">Buildings</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/key_holders">Key Holders</a>
          </li>
      </ul>
    
    <h1>Welcome to the Manning Report!</h1>
    
    <h5>Please see the following Manning report for each squad</h5>
    
    

      <div>
        <h1>List of Soldiers</h1>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">Ranks</th>
              <th scope="col">Adress</th>
              <th scope="col">Status</th>
              <th scope="col">Squad ID</th>
              <th scope="col">Weapon ID</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody>
            <% for (let soldier of soldiers) {%>
              <tr>
                  <th scope="row"><%= soldier.soldier_id%></th>
                  <td><%= soldier.soldier_name %></td>
                  <td><%= soldier.rank%></td>
                  <td><%= soldier.address%></td>
                  <td><%= soldier.soldier_status%></td>
                  <td><%= soldier.Squads_squad_id%></td>
                  <td><%= soldier.Weapons_weapon_id%></td>
                  <td><form action="/delete_soldier/<%= soldier.soldier_id%>?_method=DELETE" method="POST"><button class="fa-solid fa-delete-left"></button></form></td>
              </tr>
            <%}%>
          </tbody>
        </table>

          <h5>Add a new Soldier</h5>

          <form action='/new_soldier' method="POST">
            <div class="mb-3">
              <label for="name" class="form-label">Soldier Name</label>
              <input type="text" class="form-control" id="name" name="soldier[name]">
            </div>
            <div class="mb-3">
              <label for="Rank" class="form-label">Rank</label>
              <input type="text" class="form-control" id="Rank" name="soldier[rank]">
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Soldier Address</label>
                <input type="text" class="form-control" id="address" name="soldier[address]">
              </div>
              <div class="mb-3">
                <label for="status" class="form-label">Status</label>
                <input type="text" class="form-control" id="status" name="soldier[status]">
              </div>
              <div class="mb-3">
                <label for="squadID" class="form-label">Squad ID</label>
                <select class="form-select" aria-label="Default select example" id="squadID" name="soldier[squadID]">
                  <option value=0>No Squad</option>
                  <% for (let squad of squads) {%>
                    <option value="<%= squad.squad_id%>"><%= squad.squad_id%></option>
                    <%}%>
                  </select>
              </div>
              <div class="mb-3">
                <label for="weaponID" class="form-label">Weapon ID</label>
                <select class="form-select" aria-label="Default select example" id="weaponID" name="soldier[weaponID]">
                  <option value=0>No Weapon</option>
                  <% for (let weapon of weapons) {%>
                    <option value="<%= weapon.weapon_id%>"><%= weapon.weapon_id%></option>
                    <%}%>
                  </select>
              </div>
    
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>

          <h5>Edit a Soldier</h5>

          <form action="/edit_soldier/?_method=PUT" method="POST">
            <div class="mb-3">
                <label for="soldierID" class="form-label">Soldier ID</label>
                <select class="form-select" aria-label="Default select example" id="soldierID" name="soldier[id]">
                  <% for (let soldier of soldiers) {%>
                    <option value="<%= soldier.soldier_id%>"><%= soldier.soldier_id%></option>
                    <%}%>
                  </select>
              </div>
            <div class="mb-3">
              <label for="name" class="form-label">Soldier Name</label>
              <input type="text" class="form-control" id="name" name="soldier[name]">
            </div>
            <div class="mb-3">
              <label for="Rank" class="form-label">Rank</label>
              <input type="text" class="form-control" id="Rank" name="soldier[rank]">
            </div>
            <div class="mb-3">
                <label for="address" class="form-label">Soldier Address</label>
                <input type="text" class="form-control" id="address" name="soldier[address]">
              </div>
              <div class="mb-3">
                <label for="status" class="form-label">Status</label>
                <input type="text" class="form-control" id="status" name="soldier[status]">
              </div>
              <div class="mb-3">
                <label for="squadID" class="form-label">Squad</label>
                <select class="form-select" aria-label="Default select example" id="squadID" name="soldier[squadID]">
                  <% for (let squad of squads) {%>
                    <option value="<%= squad.squad_id%>"><%= squad.squad_id%></option>
                    <%}%>
                  </select>
              </div>
              <div class="mb-3">
                <label for="weaponID" class="form-label">Weapon ID</label>
                <select class="form-select" aria-label="Default select example" id="weaponID" name="soldier[weaponID]">
                  <% for (let weapon of weapons) {%>
                    <option value="<%= weapon.weapon_id%>"><%= weapon.weapon_id%></option>
                    <%}%>
                  </select>
              </div>
    
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    
</body>
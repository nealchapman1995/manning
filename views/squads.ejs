    <h1>Welcome to the Manning Report!</h1>
    
    <h5>Please see the following Manning report for each squad</h5>
    
    

      <div>
        <h1>List of Squads</h1>


        <table class="table">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col">Squad Leader</th>
                <th scope="col">Squad Name</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <th scope="row">1</th>
                <td>SSG Guilin</td>
                <td>Alpha 1-1</td>
                <td><i class="fa-solid fa-delete-left"></i></td>
              </tr>
              <tr>
                <th scope="row">2</th>
                <td>SSG Mercer</td>
                <td>Alpha 1-2</td>
                <td><i class="fa-solid fa-delete-left"></i></td>
              </tr>
              <tr>
                <th scope="row">4</th>
                <td>SGT Duffy</td>
                <td>Alpha 2-4</td>
                <td><i class="fa-solid fa-delete-left"></i></td>
              </tr>
              <tr>
                <th scope="row">7</th>
                <td>SSG Veerkamp</td>
                <td>Bravo 2-3</td>
                <td><i class="fa-solid fa-delete-left"></i></td>
              </tr>
            </tbody>
          </table>

          <h5>Add a new Squad</h5>

          <form>
            <div class="mb-3">
              <label for="name" class="form-label">Squad Leader</label>
              <input type="text" class="form-control" id="name">
            </div>
            <div class="mb-3">
              <label for="Rank" class="form-label">Squad Name</label>
              <input type="text" class="form-control" id="Rank">
            </div>
    
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>

          <h5>Edit a Squad</h5>

          <form>
            <div class="mb-3">
                <label for="soldierID" class="form-label">Solder ID</label>
                <select class="form-select" aria-label="Default select example" id="soldierID">
                    <option selected>Open this select menu</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">4</option>
                    <option value="3">7</option>
                  </select>
              </div>
            
              <div class="mb-3">
                <label for="name" class="form-label">Squad Leader</label>
                <input type="text" class="form-control" id="name">
              </div>
              <div class="mb-3">
                <label for="Rank" class="form-label">Squad Name</label>
                <input type="text" class="form-control" id="Rank">
              </div>
    
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
    
